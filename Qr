<body>
    <div class="container">
        <header>
            <h1>Gerador de QR Code WiFi</h1>
            <p>Rede: <strong>Record_Guest</strong> | Senha: <strong>Visitantes@25</strong></p>
        </header>
        
        <div class="config-panel">
            <div>
                <div class="config-group">
                    <label for="expiryDays">Dias de Validade:</label>
                    <input type="number" id="expiryDays" min="1" max="30" value="1">
                </div>
                <div class="config-group">
                    <label for="voucherCount">Quantidade de Vouchers (para impressão):</label>
                    <input type="number" id="voucherCount" min="1" max="12" value="4">
                </div>
            </div>
            <div>
                <div class="config-group">
                    <label for="networkType">Tipo de Rede:</label>
                    <select id="networkType">
                        <option value="WPA">WPA/WPA2</option>
                        <option value="WEP">WEP</option>
                        <option value="nopass">Sem senha</option>
                    </select>
                </div>
                <div class="config-group">
                    <label for="networkHidden">Rede Ocultada?</label>
                    <select id="networkHidden">
                        <option value="false">Não</option>
                        <option value="true">Sim</option>
                    </select>
                </div>
            </div>
        </div>
        
        <div class="actions">
            <button id="generateBtn">Gerar QR Code</button>
            <button id="printBtn">Gerar para Impressão</button>
        </div>
        
        <div class="qr-container no-print">
            <h2>QR Code para Conexão WiFi</h2>
            <div id="qrcode"></div>
            <div id="qrInfo" class="voucher-info">
                <p>Válido por <span id="validDays">1</span> dia(s) até: <span id="expiryDate"></span></p>
            </div>
        </div>
        
        <div id="voucherSheet" class="voucher-sheet">
            <h2>Vouchers de Acesso - Record_Guest</h2>
            <div id="vouchersContainer" class="vouchers-container"></div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateBtn = document.getElementById('generateBtn');
            const printBtn = document.getElementById('printBtn');
            const expiryDaysInput = document.getElementById('expiryDays');
            const voucherCountInput = document.getElementById('voucherCount');
            const qrcodeDiv = document.getElementById('qrcode');
            const expiryDateSpan = document.getElementById('expiryDate');
            const validDaysSpan = document.getElementById('validDays');
            const vouchersContainer = document.getElementById('vouchersContainer');
            const networkTypeSelect = document.getElementById('networkType');
            const networkHiddenSelect = document.getElementById('networkHidden');
            
            const ssid = "Record_Guest";
            const password = "Visitantes@25";
            
            let qrcode = null;
            
            // Função para calcular data de expiração
            function calculateExpiryDate(days) {
                const expiryDate = new Date();
                expiryDate.setDate(expiryDate.getDate() + days);
                return expiryDate.toLocaleDateString('pt-BR');
            }
            
            // Função para gerar string do QR Code no formato WiFi
            function generateWifiString() {
                const hidden = networkHiddenSelect.value === 'true';
                return `WIFI:T:${networkTypeSelect.value};S:${ssid};P:${password};H:${hidden};;`;
            }
            
            // Função para gerar QR Code
            function generateQRCode() {
                const days = parseInt(expiryDaysInput.value);
                const wifiString = generateWifiString();
                
                // Limpar QR Code anterior
                if (qrcode) {
                    qrcode.clear();
                } else {
                    qrcode = new QRCode(qrcodeDiv, {
                        width: 200,
                        height: 200
                    });
                }
                
                // Gerar novo QR Code
                qrcode.makeCode(wifiString);
                
                // Atualizar informações de validade
                validDaysSpan.textContent = days;
                expiryDateSpan.textContent = calculateExpiryDate(days);
            }
            
            // Função para gerar vouchers para impressão
            function generateVouchers() {
                const days = parseInt(expiryDaysInput.value);
                const count = parseInt(voucherCountInput.value);
                const expiryDate = calculateExpiryDate(days);
                const wifiString = generateWifiString();
                
                vouchersContainer.innerHTML = '';
                
                for (let i = 0; i < count; i++) {
                    const voucherDiv = document.createElement('div');
                    voucherDiv.className = 'voucher';
                    
                    // Criar QR Code individual para cada voucher
                    const voucherQrDiv = document.createElement('div');
                    new QRCode(voucherQrDiv, {
                        text: wifiString,
                        width: 120,
                        height: 120
                    });
                    
                    voucherDiv.innerHTML = `
                        <h3>Voucher de Acesso WiFi</h3>
                        <p>Rede: <strong>${ssid}</strong></p>
                        <div class="voucher-qr"></div>
                        <div class="voucher-info">
                            <p>Senha: <strong>${password}</strong></p>
                            <p class="expiry">Válido até: ${expiryDate}</p>
                        </div>
                    `;
                    
                    voucherDiv.querySelector('.voucher-qr').appendChild(voucherQrDiv);
                    vouchersContainer.appendChild(voucherDiv);
                }
            }
            
            // Event Listeners
            generateBtn.addEventListener('click', generateQRCode);
            
            printBtn.addEventListener('click', function() {
                generateVouchers();
                document.getElementById('voucherSheet').style.display = 'block';
                setTimeout(function() {
                    window.print();
                }, 500);
            });
            
            // Gerar QR Code inicial
            generateQRCode();
        });
    </script>
</body>
